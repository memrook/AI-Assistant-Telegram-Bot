# Пример файла переменных окружения для AI-Assistant-MD
# Скопируйте этот файл в .env и заполните своими значениями

# =============================================================================
# YANDEX CLOUD НАСТРОЙКИ
# =============================================================================

# API ключ Yandex Cloud (обязательно)
YANDEX_API_KEY=your_yandex_api_key_here

# ID каталога Yandex Cloud (обязательно)
YANDEX_FOLDER_ID=your_folder_id_here

# =============================================================================
# TELEGRAM BOT НАСТРОЙКИ
# =============================================================================

# Токен Telegram бота (обязательно)
# Получить можно у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# AI МОДЕЛЬ НАСТРОЙКИ
# =============================================================================

# Модель YandexGPT для использования
YANDEX_MODEL_NAME=yandexgpt-lite

# Версия модели YandexGPT
YANDEX_MODEL_VERSION=rc

# Температура для модели (от 0.0 до 1.0)
# 0.0 - более детерминированные ответы
# 1.0 - более креативные ответы
DEFAULT_TEMPERATURE=0.5

# Системный промпт для модели (опционально)
DEFAULT_SYSTEM_PROMPT="Вы - умный ассистент, который помогает пользователям находить информацию в документах."

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальное время обработки документов (в секундах)
MAX_PROCESSING_TIME=600

# Максимальный размер загружаемого файла (в МБ)
MAX_FILE_SIZE_MB=100

# Порог длины сообщения для добавления кнопки "Развернутый ответ" (в символах)
SHORT_MESSAGE_THRESHOLD=300

# =============================================================================
# ПОИСКОВЫЙ ИНДЕКС НАСТРОЙКИ
# =============================================================================

# Размер чанка при разбиении документов (в токенах)
CHUNK_SIZE_TOKENS=1024

# Размер перекрытия между чанками (в токенах)
CHUNK_OVERLAP_TOKENS=512 